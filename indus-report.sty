\ProvidesPackage{indus-report}

\RequirePackage{fontspec}
\RequirePackage[a4paper, margin=1in]{geometry}
\RequirePackage{setspace}

% Metadata commands
\newcommand{\faculty}[1]{\renewcommand{\faculty}{#1}}
\newcommand{\module}[1]{\renewcommand{\module}{#1}}
\newcommand{\academicyear}[1]{\renewcommand{\academicyear}{#1}}
\newcommand{\studentid}[1]{\renewcommand{\studentid}{#1}}
\newcommand{\degree}[1]{\renewcommand{\degree}{#1}}
\newcommand{\department}[1]{\renewcommand{\department}{#1}}
\newcommand{\orgname}[1]{\renewcommand{\orgname}{#1}}
\newcommand{\orgaddr}[1]{\renewcommand{\orgaddr}{#1}}

% Title Page
\renewcommand{\maketitle}{
\begin{titlepage}
    \begin{center}
        \includegraphics[]{images/nottingham-logo.png}
        
        \vspace{0.5cm}
        \huge\textbf{\faculty}

        \vspace{1cm}
        \Large\textbf{\module}

        \vspace{0.5cm}
        \textbf{\@title}

        \vspace{1cm}
        \textbf{Academic Year \academicyear}
    \end{center}
    
    \vspace{1cm}
    \large{Student Name: \@author}

    \vspace{0.1cm}
    Student ID: \studentid
    
    \vspace{0.1cm}
    Degree Pursue: \degree
    
    \vspace{0.1cm}
    Department: \department
    
    \vspace{0.1cm}
    Organisation's Name: \orgname
    
    \vspace{0.1cm}
    Organisation's Address:\\
    \orgaddr

    \vspace{0.1cm}
    Organisation's Stamp:
    \clearpage
\end{titlepage}
}

